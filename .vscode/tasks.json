{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run 3speak-admin",
			"type": "shell",
			"command": "npm run build && npm start",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Dev Mode",
			"type": "shell",
			"command": "npm run dev",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"isBackground": true
		},
		{
			"label": "Watch Build",
			"type": "shell",
			"command": "npm run watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"isBackground": true
		}
	]
}