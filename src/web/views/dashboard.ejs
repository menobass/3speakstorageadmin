                <button class="btn btn-primary" onclick="runOperation('nuke-account', true)">Preview Batch</button>
                <button class="btn btn-danger" onclick="confirmAndRun('nuke-account')">‚ö†Ô∏è Execute Batch</button>
                <div class="results" id="nuke-account-results"></div>
            </div>
        </div>
    </div>

    <script>
        // Load stats on page load
        async function loadStats() {
            try {
                const response = await fetch('/api/stats');
                const data = await response.json();
                
                if (data.success) {
                    document.getElementById('total-videos').textContent = data.data.totalVideos || '0';
                    document.getElementById('ipfs-videos').textContent = data.data.ipfsVideos || '0';
                    document.getElementById('total-storage').textContent = `${data.data.totalSizeGB || '0'} GB`;
                    document.getElementById('cleaned-videos').textContent = data.data.cleanedVideos || '0';
                }
            } catch (error) {
                console.error('Failed to load stats:', error);
            }
        }

        async function runOperation(operation, dryRun = true, extraParams = {}) {
            const btn = event.target;
            const resultsDiv = document.getElementById(`${operation}-results`);
            
            btn.disabled = true;
            btn.innerHTML = dryRun ? '<span class="loading"></span> Previewing...' : '<span class="loading"></span> Executing...';
            resultsDiv.classList.add('show');
            resultsDiv.innerHTML = '<pre>Processing...</pre>';

            const params = { dryRun, ...extraParams };

            // Add operation-specific parameters
            if (operation === 'purge-abandoned') {
                params.olderThanDays = parseInt(document.getElementById('purge-abandoned-days').value);
                params.batchSize = parseInt(document.getElementById('purge-abandoned-batch').value);
            } else if (operation === 'ipfs-diet') {
                params.olderThanMonths = parseInt(document.getElementById('ipfs-diet-months').value);
                params.viewThreshold = parseInt(document.getElementById('ipfs-diet-views').value);
                params.batchSize = parseInt(document.getElementById('ipfs-diet-batch').value);
            } else if (operation === 'cleanup') {
                params.status = 'deleted'; // Always target deleted videos
                params.storageType = document.getElementById('cleanup-storage').value;
                params.batchSize = parseInt(document.getElementById('cleanup-batch').value);
            } else if (operation === 'nuke-account') {
                params.username = document.getElementById('nuke-username').value.trim();
                params.batchSize = parseInt(document.getElementById('nuke-batch').value);
                if (!params.username) {
                    alert('Please enter a username');
                    btn.disabled = false;
                    btn.textContent = dryRun ? 'Preview' : 'Execute';
                    return;
                }
            } else if (operation === 'purge-banned') {
                params.batchSize = parseInt(document.getElementById('purge-banned-batch').value);
            }

            try {
                const response = await fetch(`/api/${operation}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(params)
                });

                const data = await response.json();
                
                if (data.success) {
                    const output = data.message || 'Operation completed successfully';
                    resultsDiv.innerHTML = `<pre>${output}</pre>`;
                    
                    // Reload stats after operation
                    if (!dryRun) {
                        setTimeout(loadStats, 1000);
                    }
                } else {
                    resultsDiv.innerHTML = `<pre style="color: #e74c3c;">Error: ${data.error}</pre>`;
                }
            } catch (error) {
                resultsDiv.innerHTML = `<pre style="color: #e74c3c;">Error: ${error.message}</pre>`;
            } finally {
                btn.disabled = false;
                btn.textContent = dryRun ? 'Preview' : 'Execute';
            }
        }

        function confirmAndRun(operation, extraParams = {}) {
            const messages = {
                'purge-failed': 'This will permanently delete failed videos and unpin IPFS content. Are you sure?',
                'purge-abandoned': 'This will permanently delete abandoned videos and unpin IPFS content. Are you sure?',
                'purge-banned': '‚ö†Ô∏è WARNING: This will permanently delete ALL videos from BANNED users! IPFS will be unpinned and S3 content deleted. Are you sure?',
                'ipfs-diet': 'This will unpin low-engagement videos from IPFS (making them inaccessible). Are you sure?',
                'cleanup': 'This will unpin IPFS content for deleted videos. Are you sure?',
                'nuke-account': '‚ö†Ô∏è WARNING: This will PERMANENTLY DELETE ALL VIDEOS for this account! Are you ABSOLUTELY sure?'
            };

            if (confirm(messages[operation] || 'Are you sure you want to execute this operation?')) {
                runOperation(operation, false, extraParams);
            }
        }

        // Progress monitoring variables
        let eventSource = null;
        let autoScrollEnabled = true;
        const activeOperations = new Map();

        // Initialize progress monitoring
        function initProgressMonitoring() {
            if (eventSource) {
                eventSource.close();
            }

            eventSource = new EventSource('/api/progress-stream');

            eventSource.onopen = function() {
                addLogMessage('info', 'Connected to progress stream');
            };

            eventSource.onerror = function(error) {
                addLogMessage('error', 'Progress stream connection lost. Attempting to reconnect...');
                // Auto-reconnect after 5 seconds
                setTimeout(initProgressMonitoring, 5000);
            };

            eventSource.onmessage = function(event) {
                try {
                    const message = JSON.parse(event.data);
                    handleProgressMessage(message);
                } catch (error) {
                    console.error('Failed to parse progress message:', error);
                }
            };
        }

        function handleProgressMessage(message) {
            switch (message.type) {
                case 'connected':
                    console.log('Connected to progress stream');
                    break;

                case 'operation_started':
                    addOperation(message.data.operationId, message.data.progress);
                    addLogMessage('info', `üöÄ Started: ${message.data.progress.operation}`);
                    break;

                case 'progress':
                    updateOperation(message.data.operationId, message.data.progress);
                    break;

                case 'operation_completed':
                    completeOperation(message.data.operationId, message.data.progress);
                    addLogMessage('success', `‚úÖ Completed: ${message.data.progress.operation}`);
                    break;

                case 'operation_error':
                    errorOperation(message.data.operationId, message.data.progress);
                    addLogMessage('error', `‚ùå Error in ${message.data.progress.operation}: ${message.data.error}`);
                    break;

                case 'log':
                    const levelIcon = { info: '‚ÑπÔ∏è', warn: '‚ö†Ô∏è', error: '‚ùå' };
                    addLogMessage(message.data.level, `${levelIcon[message.data.level]} ${message.data.message}`);
                    break;

                case 'ping':
                    // Keep connection alive
                    break;

                default:
                    console.log('Unknown message type:', message.type);
            }
        }

        function addOperation(operationId, progress) {
            activeOperations.set(operationId, progress);
            updateOperationsDisplay();
        }

        function updateOperation(operationId, progress) {
            activeOperations.set(operationId, progress);
            updateOperationsDisplay();
            
            // Add progress log message
            const percent = progress.totalItems > 0 ? ((progress.processedItems / progress.totalItems) * 100).toFixed(1) : 0;
            addLogMessage('info', 
                `üìä ${progress.operation}: Batch ${progress.currentBatch}/${progress.totalBatches} - ` +
                `${progress.processedItems}/${progress.totalItems} items (${percent}%)`
            );
        }

        function completeOperation(operationId, progress) {
            activeOperations.delete(operationId);
            updateOperationsDisplay();
            
            // Reload stats after completion
            setTimeout(loadStats, 1000);
        }

        function errorOperation(operationId, progress) {
            // Keep in active operations to show error state
            activeOperations.set(operationId, progress);
            updateOperationsDisplay();
        }

        let updateDisplayRetries = 0;
        const MAX_DISPLAY_RETRIES = 5;

        function updateOperationsDisplay() {
            const operationsContainer = document.getElementById('active-operations');
            
            // Safety check - container must exist
            if (!operationsContainer) {
                if (updateDisplayRetries < MAX_DISPLAY_RETRIES) {
                    updateDisplayRetries++;
                    console.warn(`Progress display container not found, retry ${updateDisplayRetries}/${MAX_DISPLAY_RETRIES}`);
                    setTimeout(updateOperationsDisplay, 100);
                } else {
                    console.error('Progress display container not found after max retries');
                    updateDisplayRetries = 0;
                }
                return;
            }
            
            // Reset retry counter on successful access
            updateDisplayRetries = 0;

            if (activeOperations.size === 0) {
                // Show "no operations" message
                operationsContainer.innerHTML = `
                    <div style="font-weight: 600; margin-bottom: 0.5rem; color: #333;">Active Operations:</div>
                    <div id="operations-list">
                        <div class="text-muted" style="font-style: italic;">No active operations</div>
                    </div>
                `;
                return;
            }

            // Build operations HTML
            const operationsHtml = Array.from(activeOperations.entries()).map(([operationId, progress]) => {
                const percent = progress.totalItems > 0 ? ((progress.processedItems / progress.totalItems) * 100) : 0;
                const statusIcon = {
                    'running': 'üîÑ',
                    'paused': '‚è∏Ô∏è',
                    'completed': '‚úÖ',
                    'error': '‚ùå',
                    'cancelled': 'üõë'
                };

                const statusColor = {
                    'running': '#17a2b8',
                    'paused': '#ffc107',
                    'completed': '#28a745',
                    'error': '#dc3545',
                    'cancelled': '#6c757d'
                };

                return `
                    <div style="background: #f8f9fa; border-left: 4px solid ${statusColor[progress.status]}; padding: 0.75rem; margin-bottom: 0.5rem; border-radius: 0 6px 6px 0;">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <strong>${statusIcon[progress.status]} ${progress.operation}</strong>
                                <div style="font-size: 0.85rem; color: #666;">
                                    Batch ${progress.currentBatch}/${progress.totalBatches} ‚Ä¢ 
                                    ${progress.processedItems}/${progress.totalItems} items ‚Ä¢ 
                                    ${progress.errors.length} errors
                                </div>
                            </div>
                            <div style="text-align: right;">
                                <div style="font-weight: 600; color: ${statusColor[progress.status]};">${percent.toFixed(1)}%</div>
                                ${progress.status === 'running' ? `
                                    <button class="btn btn-sm" style="background: #ffc107; color: #212529; padding: 0.2rem 0.4rem; font-size: 0.7rem; margin: 0 0.1rem;" 
                                            onclick="controlOperation('${operationId}', 'pause')">Pause</button>
                                    <button class="btn btn-sm" style="background: #dc3545; color: white; padding: 0.2rem 0.4rem; font-size: 0.7rem;" 
                                            onclick="controlOperation('${operationId}', 'cancel')">Cancel</button>
                                ` : ''}
                            </div>
                        </div>
                        <div style="width: 100%; background: #e9ecef; height: 6px; border-radius: 3px; margin-top: 0.5rem;">
                            <div style="width: ${percent}%; background: ${statusColor[progress.status]}; height: 100%; border-radius: 3px; transition: width 0.3s ease;"></div>
                        </div>
                    </div>
                `;
            }).join('');

            // Render operations into the container
            operationsContainer.innerHTML = `
                <div style="font-weight: 600; margin-bottom: 0.5rem; color: #333;">Active Operations:</div>
                <div id="operations-list">${operationsHtml}</div>
            `;
        }

        function addLogMessage(level, message) {
            const progressLog = document.getElementById('progress-log');
            const timestamp = new Date().toLocaleTimeString();
            
            const levelColors = {
                'info': '#17a2b8',
                'warn': '#ffc107',
                'error': '#dc3545',
                'success': '#28a745'
            };

            const logEntry = document.createElement('div');
            logEntry.innerHTML = `
                <span style="color: #666; font-size: 0.8em;">[${timestamp}]</span> 
                <span style="color: ${levelColors[level] || '#333'};">${message}</span>
            `;
            logEntry.style.marginBottom = '0.2rem';

            progressLog.appendChild(logEntry);

            // Auto-scroll to bottom if enabled
            if (autoScrollEnabled) {
                progressLog.scrollTop = progressLog.scrollHeight;
            }

            // Limit log entries to prevent memory issues
            const maxEntries = 500;
            while (progressLog.children.length > maxEntries) {
                progressLog.removeChild(progressLog.firstChild);
            }
        }

        function clearLogs() {
            const progressLog = document.getElementById('progress-log');
            progressLog.innerHTML = '<div class="text-muted">Logs cleared...</div>';
        }

        function toggleAutoScroll() {
            autoScrollEnabled = !autoScrollEnabled;
            const btn = document.getElementById('auto-scroll-btn');
            btn.textContent = `Auto-scroll: ${autoScrollEnabled ? 'ON' : 'OFF'}`;
            btn.style.background = autoScrollEnabled ? '#17a2b8' : '#6c757d';
        }

        function controlOperation(operationId, action) {
            fetch(`/api/operations/${operationId}/${action}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    addLogMessage('info', `Operation ${action} requested: ${operationId}`);
                } else {
                    addLogMessage('error', `Failed to ${action} operation: ${data.error}`);
                }
            })
            .catch(error => {
                addLogMessage('error', `Error ${action}ing operation: ${error.message}`);
            });
        }

        // Load stats on page load
        loadStats();
        
        // Initialize progress monitoring
        initProgressMonitoring();
        
        // Refresh stats every 30 seconds
        setInterval(loadStats, 30000);

        // Clean up on page unload
        window.addEventListener('beforeunload', function() {
            if (eventSource) {
                eventSource.close();
            }
        });
    </script>
</body>
