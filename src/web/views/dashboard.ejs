        <!-- Progress Monitor Section -->
        <div style="margin-bottom: 2rem;">
            <div class="operation-card">
                <div style="display: flex; justify-content: between; align-items: center; margin-bottom: 1rem;">
                    <h2>üìä Operation Progress Monitor</h2>
                    <div>
                        <button class="btn btn-sm" style="background: #6c757d; color: white; padding: 0.4rem 0.8rem; font-size: 0.8rem;" onclick="clearLogs()">Clear</button>
