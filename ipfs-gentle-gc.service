[Unit]
Description=Gentle IPFS Garbage Collection
Documentation=https://github.com/menobass/3speakstorageadmin
After=ipfs.service

[Service]
Type=oneshot
User=meno
Group=meno
Environment=IPFS_PATH=/home/meno/.ipfs
ExecStart=/home/meno/Documents/menosoft/3speakstorageadmin/scripts/gentle-gc.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ipfs-gentle-gc

# Don't let GC run forever
TimeoutStartSec=3h

[Install]
WantedBy=multi-user.target
